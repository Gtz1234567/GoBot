name: Deploy Bot

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Baixar código do repositório
      uses: actions/checkout@v2

    - name: Instalar Go
      uses: actions/setup-go@v3
      with:
        go-version: '1.20'  # Substitua pela versão do Go que você usa

    - name: Instalar dependências
      run: go mod tidy

    - name: Compilar o bot
      run: go build -o bot main.go  # Substitua `main.go` pelo nome correto do arquivo principal do seu bot

    - name: Rodar o bot
      run: ./bot
      env:
        DISCORD_TOKEN: ${{ secrets.TOKEN }}
