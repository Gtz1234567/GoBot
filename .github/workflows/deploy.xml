name: Deploy Bot

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Check out the code
      uses: actions/checkout@v2

    - name: Set up Go
      uses: actions/setup-go@v2
      with:
        go-version: '1.18'  # Ou qualquer outra versão que você esteja usando

    - name: Install dependencies
      run: |
        go mod tidy
        go get

    - name: Run bot
      run: |
        go run main.go
      env:
        DISCORD_TOKEN: ${{ secrets.TOKEN }}
